{
  "name": "@ssp/api",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "default": "./src/constants/*.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@ssp/auth": "workspace:*",
    "@ssp/db": "workspace:*",
    "@ssp/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "2.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ssp/eslint-config": "workspace:*",
    "@ssp/prettier-config": "workspace:*",
    "@ssp/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@ssp/prettier-config"
}
